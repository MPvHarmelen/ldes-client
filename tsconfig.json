{
    "compilerOptions": {
    "lib": ["es2023", "dom", "node"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
      "outDir": "dist",
      "declaration": true
    },
    "exclude": [
      "node_modules",
      "dist",
      "tests"
    ]
  }
